---
/**
 * Este archivo define la estructura básica del layout HTML para la aplicación.
 * Utiliza Astro para manejar las propiedades y renderizar el contenido dinámico.
 */
interface Props {
    /** Título de la página */
    title: string;
}

// Extrae la propiedad 'title' de las propiedades de Astro
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Club de Corte" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
            rel="stylesheet"
        />
    </head>
    <!-- El contenido del cuerpo de la página se insertará aquí -->
    <body>
        <!-- ...contenido... -->
        <slot />
    </body>
</html>
<style is:global>
    * {
        scroll-behavior: smooth;
        font-family: Robote, sans-serif;
    }
</style>